def strIMC imc
  | imc <= 18.5 = "estas bajo el peso normal"
  | imc <= 25.0 = "tu peso es normal"
  | imc <= 30.0 = "estas con sobrepeso"
  | otherwise   = "estas obeso, cuidado!"

def strIMC' peso altura
