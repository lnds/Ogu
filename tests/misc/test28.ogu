-- mmmm


dispatch greeting with \x -> (x "language")


greeting "French" ?  person = str "Bonjour " (person "name")

greeting "English" ?  person = str "Hello " (person "name")

greeting "Spanish" ?  person = str "Hola " (person "name")

greeting otherwise ?  _ = str "?????"

greeting  {"name" "Michelle", "language" "French"} -- Bonjour Michell

greeting  {"name" "Pedro", "language" "Spanish"} -- Hola Pedro

